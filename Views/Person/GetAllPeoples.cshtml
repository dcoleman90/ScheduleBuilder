@model IEnumerable<ScheduleBuilder.Model.Person>

@{
    ViewBag.Title = "GetAllPeoples";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Employees</h2>
@if (Session["roleTitle"].ToString() == "Employee")
{
    <p></p>
}
else
{
    <p>
        @Html.ActionLink("Add Employee", "AddPerson")
    </p>
}
<table class="table">
    <thead >
        <tr bgcolor="#337ab7" style="color:white">
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Ssn)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zipcode)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.RoleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusId)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Email)
            </th>
        </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ssn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zipcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    <span style="display:none">@Html.DisplayFor(modelItem => item.RoleId)</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @if (Session["roleTitle"].ToString() == "Employee")
                    {
                        <p></p>
                    }
                    else
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span>|</span>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) <span>|</span>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
                </td>
            </tr>
        }

</table>
