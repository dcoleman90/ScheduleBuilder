<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Schedule Manager</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+KR&display=swap" rel="stylesheet">
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-2.5.0.min.js"></script>
    <script src="~/Scripts/app.js"></script>
</head>
@model ScheduleBuilder.Model.Person

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <div class="logo">
        <img src="@Url.Content("~/Content/Images/SM_Logo2.png")" class="logo_img" />
    </div>
    <div class="wrapper">
        <div class="login">
            <h3 class="form-signin-heading">Please Login</h3>
            <h4 class="text-danger">@ViewBag.Error</h4>
            <h4 class="text-success">@ViewBag.loginAgain</h4>

            <input required="" class="form-control" style="font-size:16px; padding:15px" name="Username" type="text" placeholder="Username" />

            <input required="" class="form-control" style="font-size:16px; padding:15px" name="Password" type="password" placeholder="Password" />

            <input class="form-control btn-primary" style="font-size:16px; padding:15px" type="submit" value="Login" new { id=item.Id } />


        </div>
    </div>
}